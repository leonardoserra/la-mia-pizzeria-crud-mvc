@{
    Layout = "Admin/_Layout";
}
@model Pizza

@*CARD PIZZA*@
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card shadow-sm">
                <img src="@Model.ImagePath" class="card-img-top object-fit-cover"  height="400" role="img" focusable="false" alt="La vera Pizza" />
                <div class="card-body">
                    <h3 class="card-text">@Model.Name</h3>
                    <p class="card-text">@Model.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group ">
                            <button type="button" class="btn text-light btn-primary btn-sm btn-outline-primary">+</button>
                            <button type="button" class="btn text-light btn-danger btn-sm btn-outline-secondary">-</button>
                        </div>
                    </div>
                    <div class="card-item fw-semibold pt-2 text-body-secondary bg-white px-0">
                        Prezzo: @Model.Price€
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

